<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>org.whistlepost</groupId>
    <artifactId>whistlepost-launcher</artifactId>
    <version>1.0.0-SNAPSHOT</version>
    <name>whistlepost-launcher</name>
    <description>Launch configurations for the Whistlepost platform</description>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <slingfeature-maven-plugin.version>1.6.6</slingfeature-maven-plugin.version>
        <sling-kickstart-maven-plugin.version>0.0.8</sling-kickstart-maven-plugin.version>
        <felix.version>7.0.5</felix.version>
        <whistlepost.version>2.0.0-alpha2-SNAPSHOT</whistlepost.version>
        <whistlepost-caconfig.version>0.1.0</whistlepost-caconfig.version>
        <whistlepost-purecss.version>0.1.0-SNAPSHOT</whistlepost-purecss.version>
        <whistlepost-i18n.version>0.1.0</whistlepost-i18n.version>
        <whistlepost-console.version>0.1.0-SNAPSHOT</whistlepost-console.version>
        <whistlepost-services.version>0.1.0</whistlepost-services.version>
        <whistlepost-scripting-groovy.version>0.1.0</whistlepost-scripting-groovy.version>
        <whistlepost-scripting-liquid.version>0.1.2</whistlepost-scripting-liquid.version>
        <groovy.version>3.0.9</groovy.version>
        <oak.version>1.26.0</oak.version>
        <keycloak.version>10.0.2</keycloak.version>
        <jackson.version>2.13.0</jackson.version>
        <thymeleaf.version>3.0.12.RELEASE_1</thymeleaf.version>
<!--        <thymeleaf.version>3.0.16-SNAPSHOT</thymeleaf.version>-->
<!--        <ognl.version>3.1.26</ognl.version>-->
        <ognl.version>3.2.1_1</ognl.version>
        <rome.version>1.18.0</rome.version>
        <jsoup.version>1.15.1</jsoup.version>
    </properties>
    <build>
        <plugins>
            <plugin>
                <groupId>biz.aQute.bnd</groupId>
                <artifactId>bnd-maven-plugin</artifactId>
                <version>3.5.0</version>
                <executions>
                    <execution>
                        <id>run-bnd</id>
                        <goals>
                            <goal>bnd-process</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>2.6</version>
                <configuration>
                    <archive>
                        <manifestFile>${project.build.outputDirectory}/META-INF/MANIFEST.MF</manifestFile>
                    </archive>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>3.7.0</version>
                <configuration>
                    <source>8</source>
                    <target>8</target>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.sling</groupId>
                <artifactId>maven-sling-plugin</artifactId>
                <version>2.3.4</version>
                <configuration>
                    <slingUrl>http://localhost:8080/system/console</slingUrl>
                    <user>admin</user>
                    <password>admin</password>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.sling</groupId>
                <artifactId>slingfeature-maven-plugin</artifactId>
                <version>${slingfeature-maven-plugin.version}</version>
                <extensions>true</extensions>
                <configuration>
<!--                    <featuresExcludes>logging.json</featuresExcludes>-->
<!--                    <featuresExcludes>logging-stdout.json</featuresExcludes>-->
                    <replacePropertyVariables>
                        whistlepost.version,whistlepost-caconfig.version,whistlepost-purecss.version,whistlepost-i18n.version,whistlepost-console.version,whistlepost-services.version,whistlepost-scripting-groovy.version,
                        whistlepost-scripting-liquid.version, groovy.version,keycloak.version,jackson.version,
                        whistlepost-scripting-liquid.version, groovy.version,keycloak.version,jackson.version,
                        thymeleaf.version, ognl.version,rome.version,jsoup.version
                    </replacePropertyVariables>
                    <framework>
                        <groupId>org.apache.felix</groupId>
                        <artifactId>org.apache.felix.framework</artifactId>
                        <version>${felix.version}</version>
                    </framework>
                    <aggregates>
                        <aggregate>
                            <classifier>whistlepost</classifier>
                            <filesInclude>**/*.json</filesInclude>
<!--                            <filesExclude>scripting/scripting-thymeleaf.json</filesExclude>-->
                            <filesExclude>aws.json</filesExclude>
                            <filesExclude>logging.json</filesExclude>
                            <filesExclude>logging-stdout.json</filesExclude>
                            <filesExclude>applocal.json</filesExclude>
                            <title>Whistlepost Feature Model</title>
                            <artifactsOverrides>
                                <artifactsOverride>org.antlr:antlr4-runtime:4.9.1</artifactsOverride>
                                <artifactsOverride>org.javassist:javassist:3.28.0-GA</artifactsOverride>
                                <artifactsOverride>org.apache.servicemix.bundles:org.apache.servicemix.bundles.thymeleaf:${thymeleaf.version}</artifactsOverride>
                                <artifactsOverride>org.apache.servicemix.bundles:org.apache.servicemix.bundles.ognl:${ognl.version}</artifactsOverride>
                                <artifactsOverride>org.apache.httpcomponents:httpclient-osgi:4.5.11</artifactsOverride>
                                <artifactsOverride>org.apache.httpcomponents:httpcore-osgi:4.4.13</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-core:${jackson.version}</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-annotations:${jackson.version}</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-databind:${jackson.version}</artifactsOverride>
                                <artifactsOverride>org.codehaus.groovy:groovy:${groovy.version}</artifactsOverride>
                                <artifactsOverride>org.codehaus.groovy:groovy-jsr223:${groovy.version}</artifactsOverride>
                                <artifactsOverride>org.codehaus.groovy:groovy-json:${groovy.version}</artifactsOverride>
                                <artifactsOverride>org.codehaus.groovy:groovy-templates:${groovy.version}</artifactsOverride>
                                <artifactsOverride>org.apache.sling:org.apache.sling.models.caconfig:1.0.2</artifactsOverride>
                            </artifactsOverrides>
                        </aggregate>
                        <aggregate>
                            <classifier>local</classifier>
                            <filesInclude>**/*.json</filesInclude>
<!--                            <filesExclude>scripting/scripting-thymeleaf.json</filesExclude>-->
                            <filesExclude>aws.json</filesExclude>
                            <filesExclude>logging.json</filesExclude>
                            <filesExclude>logging-stdout.json</filesExclude>
                            <filesExclude>app.json</filesExclude>
                            <title>Whistlepost Local Dev</title>
                            <artifactsOverrides>
                                <artifactsOverride>org.antlr:antlr4-runtime:4.9.1</artifactsOverride>
                                <artifactsOverride>org.javassist:javassist:3.28.0-GA</artifactsOverride>
                                <artifactsOverride>org.apache.servicemix.bundles:org.apache.servicemix.bundles.thymeleaf:${thymeleaf.version}</artifactsOverride>
                                <artifactsOverride>org.apache.servicemix.bundles:org.apache.servicemix.bundles.ognl:${ognl.version}</artifactsOverride>
                                <artifactsOverride>org.apache.httpcomponents:httpclient-osgi:4.5.11</artifactsOverride>
                                <artifactsOverride>org.apache.httpcomponents:httpcore-osgi:4.4.13</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-core:${jackson.version}</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-annotations:${jackson.version}</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-databind:${jackson.version}</artifactsOverride>
                                <artifactsOverride>org.codehaus.groovy:groovy:${groovy.version}</artifactsOverride>
                                <artifactsOverride>org.apache.sling:org.apache.sling.models.caconfig:1.0.2</artifactsOverride>
                            </artifactsOverrides>
                        </aggregate>
                        <aggregate>
                            <classifier>docker</classifier>
                            <filesInclude>**/*.json</filesInclude>
                            <filesExclude>scripting/scripting-thymeleaf.json</filesExclude>
                            <filesExclude>aws.json</filesExclude>
                            <filesExclude>logging.json</filesExclude>
                            <filesExclude>logging-stdout.json</filesExclude>
                            <filesExclude>applocal.json</filesExclude>
                            <title>Whistlepost Docker</title>
                            <artifactsOverrides>
                                <artifactsOverride>org.antlr:antlr4-runtime:4.9.1</artifactsOverride>
                                <artifactsOverride>org.javassist:javassist:3.28.0-GA</artifactsOverride>
                                <artifactsOverride>org.apache.servicemix.bundles:org.apache.servicemix.bundles.thymeleaf:${thymeleaf.version}</artifactsOverride>
                                <artifactsOverride>org.apache.httpcomponents:httpclient-osgi:4.5.11</artifactsOverride>
                                <artifactsOverride>org.apache.httpcomponents:httpcore-osgi:4.4.13</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-core:${jackson.version}</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-annotations:${jackson.version}</artifactsOverride>
                                <artifactsOverride>com.fasterxml.jackson.core:jackson-databind:${jackson.version}</artifactsOverride>
                                <artifactsOverride>org.codehaus.groovy:groovy:${groovy.version}</artifactsOverride>
                                <artifactsOverride>org.apache.sling:org.apache.sling.models.caconfig:1.0.2</artifactsOverride>
                            </artifactsOverrides>
                        </aggregate>
                    </aggregates>
                    <archives>
                        <archive>
                            <classifier>package</classifier>
                            <includeClassifier>whistlepost</includeClassifier>
                            <type>zip</type>
                        </archive>
                    </archives>
                    <repositories>
                        <repository>
                            <includeClassifier>whistlepost</includeClassifier>
                            <includeClassifier>local</includeClassifier>
                            <includeClassifier>docker</includeClassifier>
                        </repository>
                    </repositories>
                </configuration>
                <executions>
                    <execution>
                        <id>create-fm</id>
                        <phase>package</phase>
                        <goals>
                            <goal>include-artifact</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>aggregate-configuration</id>
                        <phase>package</phase>
                        <goals>
                            <goal>aggregate-features</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>install-fm</id>
                        <phase>package</phase>
                        <goals>
                            <goal>attach-features</goal>
                            <goal>attach-featurearchives</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>create-repository</id>
                        <phase>package</phase>
                        <goals>
                            <goal>repository</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>prepare-feature-launcher</id>
                        <goals>
                            <goal>get</goal>
                            <goal>copy</goal>
                        </goals>
                        <phase>package</phase>
                        <configuration>
                            <!-- 1.1.28 and newer versions don't work out-of-the-box due to SLING-10956 -->
                            <artifact>org.apache.sling:org.apache.sling.feature.launcher:1.1.26</artifact>
                            <stripVersion>true</stripVersion>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>javax.servlet</groupId>
            <artifactId>servlet-api</artifactId>
            <version>2.5</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.compendium</artifactId>
            <version>4.2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.core</artifactId>
            <version>4.2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>javax.jcr</groupId>
            <artifactId>jcr</artifactId>
            <version>2.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.sling</groupId>
            <artifactId>org.apache.sling.api</artifactId>
            <version>2.9.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.7.6</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.annotation.versioning</artifactId>
            <version>1.0.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.service.component.annotations</artifactId>
            <version>1.3.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.osgi</groupId>
            <artifactId>org.osgi.service.metatype.annotations</artifactId>
            <version>1.3.0</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
            <scope>test</scope>
        </dependency>
    </dependencies>
    <repositories>
        <repository>
            <id>maven-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
            <snapshots>
<!--                <updatePolicy>always</updatePolicy>-->
            </snapshots>
        </repository>
        <repository>
            <id>apache-snapshots</id>
            <url>https://repository.apache.org/snapshots</url>
            <snapshots>
<!--                <updatePolicy>always</updatePolicy>-->
            </snapshots>
        </repository>
    </repositories>
    <distributionManagement>
        <snapshotRepository>
            <id>sonatype-nexus-snapshots</id>
            <url>https://oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>
    <profiles>
        <profile>
            <id>autoInstallBundle</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.sling</groupId>
                        <artifactId>maven-sling-plugin</artifactId>
                        <executions>
                            <execution>
                                <id>install-bundle</id>
                                <goals>
                                    <goal>install</goal>
                                </goals>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>launch</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.sling</groupId>
                        <artifactId>sling-kickstart-maven-plugin</artifactId>
                        <version>${sling-kickstart-maven-plugin.version}</version>
                        <extensions>true</extensions>
                        <executions>
                            <execution>
                                <id>start-sling</id>
                                <phase>install</phase>
                                <goals>
                                    <goal>start</goal>
                                </goals>
                            </execution>
                        </executions>
                        <configuration>
<!--                            <kickstartJar>${project.build.directory}/${project.artifactId}-${project.version}.jar</kickstartJar>-->
                            <kickstartDependency>
                                <groupId>org.apache.sling</groupId>
                                <artifactId>org.apache.sling.kickstart</artifactId>
                                <version>0.0.12</version>
                            </kickstartDependency>
                            <parallelExecution>false</parallelExecution>
<!--                            <keepLaunchpadRunning>true</keepLaunchpadRunning>-->
                            <servers>
                                <server>
                                    <port>8080</port>
                                    <controlPort>8081</controlPort>
                                    <additionalFeatureFile>
                                        target/slingfeature-tmp/feature-whistlepost.json
                                    </additionalFeatureFile>
                                    <debug>true</debug>
                                </server>
                            </servers>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
